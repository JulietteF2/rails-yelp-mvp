<div class="container">
  <h1>Add a new review</h1>
  <%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant) %>
  <hr>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
