<div class="container">
  <div class="restaurant-name">
    <h1><%= @restaurant.name %></h1>
    <h6>Your favorite <%= @restaurant.category %> restaurant</h6>
    <hr>
  </div>

  <div class="coordo">
    <p><strong>Contacts</strong></p>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
  </div>
  <br>

  <div class="rest-reviews">
    <h4>Reviews</h4>
    <a href="#form-link">Add a review</a>
    <ul>
      <br>
      <% @restaurant.reviews.each do |rev| %>
        <li><strong><%= rev.rating %> stars</strong> - <%= rev.content %></li>
      <% end %>
    </ul>
  </div>

  <div class="restshow-form" id="form-link">
    <h4>Add a new review</h4>
    <hr>

    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
